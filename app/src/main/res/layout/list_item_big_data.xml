<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#80f0"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/can_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="canChannel:1" />

        <TextView
            android:id="@+id/can_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="canId:3BBH" />

        <TextView
            android:id="@+id/sub_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="subId:3BBH" />
    </LinearLayout>


    <TextView
        android:id="@+id/can_data_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canDataLen:8" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data:00 00 00 00 00 00 00 00" />

</LinearLayout>