<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="event_type=1" />

    <TextView
        android:id="@+id/value_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_int=2" />

    <TextView
        android:id="@+id/value_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_float=2.1" />

    <TextView
        android:id="@+id/value_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_double=3.5" />

    <TextView
        android:id="@+id/value_array_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_array_int=1,3,4" />

    <TextView
        android:id="@+id/value_array_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_array_float=1.2,5.6" />

    <TextView
        android:id="@+id/value_array_byte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_array_byte=12,34,45" />

</LinearLayout>